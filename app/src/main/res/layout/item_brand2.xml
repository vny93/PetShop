<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        style="@style/style_cardview_itemProductType"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_idBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_30sdp"/>

            <ImageView
                android:id="@+id/imv_brand_mng"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/no_image" />

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nameBrand"
                    style="@style/style_textview_login3"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="3"
                    android:text="@string/tv_brand_name"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/delete_brand"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/ic_baseline_clear_24" />

            </LinearLayout>

            </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>