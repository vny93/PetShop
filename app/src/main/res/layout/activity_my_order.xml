<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_order"
            style="@style/style_imv_icon"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24" />

        <TextView
            android:id="@+id/name_productType"
            style="@style/style_textview_weight"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text="@string/tv_titleOrder"
            android:textSize="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:textStyle="bold" />

        <ImageView
            style="@style/style_imv_icon"
            android:layout_marginStart="@dimen/_minus50sdp"
            android:background="@drawable/ic_baseline_search_24" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="center"
        app:tabSelectedTextColor="@color/color1"
        app:tabTextColor="@color/color3"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabMode="scrollable"
        android:textSize="15sp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>