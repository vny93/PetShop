<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/lnl_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imv_closeRgt"
            style="@style/style_imv_icon"
            android:layout_marginTop="@dimen/_13sdp"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24" />

        <ImageView
            android:id="@+id/logo"
            style="@style/style_imvlogin"
            android:layout_marginTop="@dimen/_30sdp" />

        <TextView
            android:id="@+id/title_username"
            style="@style/style_textview_forgotpw"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_minus20sdp"
            android:text="@string/tv_username" />

        <androidx.cardview.widget.CardView
            style="@style/style_cardview_userlogin2"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:backgroundTint="@color/white">

            <EditText
                android:id="@+id/rgt_username"
                style="@style/style_edt_login2"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@color/white"
                android:hint="@string/hint_edtusername"
                android:textSize="@dimen/_13sdp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/titlePass"
            style="@style/style_textview_forgotpw"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_minus20sdp"
            android:text="@string/tv_password" />

        <androidx.cardview.widget.CardView
            style="@style/style_cardview_userlogin2"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:backgroundTint="@color/white">

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/hide_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/rgt_password"
                    style="@style/style_edt_login2"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@color/white"
                    android:hint="@string/hint_edtpassword"
                    android:inputType="textPassword"
                    android:textSize="@dimen/_13sdp" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnRegister"
            style="@style/style_btnlogin"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_marginEnd="@dimen/_90sdp"
            android:text="@string/tv_register"
            android:textSize="@dimen/_13sdp" />


    </LinearLayout>

</RelativeLayout>