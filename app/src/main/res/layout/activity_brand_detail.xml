<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_brandDetail"
            style="@style/style_imv_icon"
            android:background="@drawable/ic_baseline_clear_24" />

        <TextView
            android:id="@+id/name_brand"
            style="@style/style_textview_weight"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text="@string/tv_brand"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_brandDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_BrandDetail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/no_image" />

            <TextView
                style="@style/style_textview_login2"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/title_contact"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    style="@style/style_textview_login2"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/pf_phone"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/phone_brand"
                    style="@style/style_textview_login2"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/tv_brandname"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    style="@style/style_textview_login2"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/tv_email"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/email_brand"
                    style="@style/style_textview_login2"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/tv_brandname"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <TextView
                style="@style/style_textview_login2"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/title_introduce"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bodyBrand"
                style="@style/style_textview_login2"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>