<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:id="@+id/lnl_addProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_profile"
            style="@style/style_imv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24" />

        <ImageView
            android:id="@+id/logo"
            android:layout_marginTop="@dimen/_5sdp"
            style="@style/style_imvlogin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:text="@string/pf_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/style_textview_forgotpw"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_minus20sdp"
                android:text="@string/pf_name" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_pf_name"
                style="@style/style_cardview_userlogin2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <EditText
                    android:id="@+id/pf_name"
                    style="@style/style_edt_login2"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:enabled="false"
                    android:hint="@string/pf_hintName" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/style_textview_forgotpw"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_minus20sdp"
                android:text="@string/pf_birth" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_pf_birth"
                style="@style/style_cardview_userlogin2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/pf_birth"
                        style="@style/style_edt_login2"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:enabled="false"
                        android:hint="@string/pf_hintBirth" />

                    <ImageView
                        android:id="@+id/imv_calendar"
                        style="@style/style_imv_icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_minus30sdp"
                        android:background="@drawable/ic_baseline_calendar_month_24" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            style="@style/style_textview_forgotpw"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/pf_gender" />

        <RadioGroup
            android:id="@+id/radG_lbt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:text="@string/pf_male"
                android:enabled="false"
                android:textSize="@dimen/_13sdp" />

            <RadioButton
                android:id="@+id/radio_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:text="@string/pf_female"
                android:enabled="false"
                android:textSize="@dimen/_13sdp" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/style_textview_forgotpw"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_minus20sdp"
                android:text="@string/tv_brand_phone" />

            <androidx.cardview.widget.CardView
                style="@style/style_cardview_userlogin2"
                android:id="@+id/cart_pf_phone"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <EditText
                    android:id="@+id/pf_phone"
                    style="@style/style_edt_login2"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:enabled="false"
                    android:hint="@string/pf_hintPhone" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/style_textview_forgotpw"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_minus20sdp"
                android:text="@string/hint_email" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_rgt_email"
                style="@style/style_cardview_userlogin2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <EditText
                    android:id="@+id/rgt_email"
                    style="@style/style_edt_login2"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:enabled="false"
                    android:hint="@string/hint_email" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            style="@style/style_textview_forgotpw"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_minus10sdp"
            android:text="@string/pf_address" />

        <androidx.cardview.widget.CardView
            style="@style/style_cardview_itemProductType"
            android:id="@+id/cart_pf_address"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_30sdp">

            <EditText
                android:id="@+id/pf_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:textSize="@dimen/_11sdp"
                android:maxLength="100"
                android:hint="@string/pf_hintAddress"
                android:textColor="@color/black"
                android:enabled="false"
                android:background="@drawable/boder_rectangle"
                android:padding="@dimen/_8sdp"
                android:gravity="top"
                android:inputType="text|textMultiLine" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/style_textview_forgotpw"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_minus20sdp"
                android:text="@string/pf_taxCode" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_pf_taxCode"
                style="@style/style_cardview_userlogin2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <EditText
                    android:id="@+id/pf_taxCode"
                    style="@style/style_edt_login2"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:enabled="false"
                    android:hint="@string/pf_hintTaxCode" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            style="@style/style_btnlogin"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_90sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="@string/tv_save"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>

</ScrollView>