<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logo2"
    tools:context=".screens.admin.main.HomeAdminFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_200sdp"
        android:orientation="horizontal">

        <TextView
            style="@style/style_textview_login2"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="@string/ad_nav4_mainLogout"
            android:textSize="@dimen/_13sdp" />

        <ImageView
            android:id="@+id/imv_logout"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/ic_baseline_logout_24" />

    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        style="@style/style_imvlogin"
        android:layout_marginTop="@dimen/_5sdp" />

    <TextView
        style="@style/style_textview_login3"
        android:text="@string/tv_hello"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_25sdp" />

    <TextView
        android:id="@+id/home_nameShipper"
        style="@style/style_textview_login3"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/color1"
        android:textSize="@dimen/_25sdp" />

    <TextView
        style="@style/style_textview_login3"
        android:text="@string/tv_newDay"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_25sdp" />

    <Button
        android:id="@+id/btn_orderShip"
        style="@style/style_btnlogin"
        android:layout_gravity="center"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:text="@string/tv_work"/>
</LinearLayout>