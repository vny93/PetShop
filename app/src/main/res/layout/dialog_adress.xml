<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_send"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_290sdp"
    android:background="@drawable/boder_rectangle2"
    android:orientation="vertical">


    <TextView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_13sdp"
        android:enabled="false"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/title_adress"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:padding="@dimen/_2sdp"
        android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar.Bridge">

        <AutoCompleteTextView
            android:id="@+id/spinner_district"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/boder_rectangle2"
            android:enabled="false"
            android:gravity="center"
            android:inputType="none"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:textSize="@dimen/_13sdp"
        android:enabled="false"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/title_address2"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:padding="@dimen/_2sdp"
        android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar.Bridge">

        <AutoCompleteTextView
            android:id="@+id/spinner_wards"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/boder_rectangle2"
            android:enabled="false"
            android:gravity="center"
            android:inputType="none"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:enabled="false"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/title_address3"/>

    <EditText
        android:id="@+id/edt_way"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/boder_rectangle2"
        android:gravity="top"
        android:hint="@string/pf_hintAddress"
        android:inputType="text|textMultiLine"
        android:maxLength="100"
        android:padding="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_11sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="@dimen/_133sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"
            android:text="@string/btn_action_pc" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/btn_cancel"
            android:textSize="@dimen/_11sdp" />

    </LinearLayout>


</LinearLayout>