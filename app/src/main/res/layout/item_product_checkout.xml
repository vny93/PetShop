<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        style="@style/style_cardview_itemProductType"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_pro_checkout"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_65sdp"
                android:src="@drawable/no_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_proname_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_11sdp"
                    android:text="@string/tv_productName"
                    android:textColor="@color/black"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_discount_checkout"
                    style="@style/style_textview_login3"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_9sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_proPrice_checkout"
                        style="@style/style_textview_login3"
                        android:layout_weight="1"
                        android:text="@string/tv_price"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/tv_amount_checkout"
                        style="@style/style_textview_login3"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:text="@string/tv_amount"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>