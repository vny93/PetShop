<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imv_close"
        style="@style/style_imv_icon"
        android:layout_marginTop="@dimen/_13sdp"
        android:background="@drawable/ic_baseline_clear_24" />

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="@dimen/_100sdp"
        style="@style/style_imvlogin"/>

    <TextView
        style="@style/style_textview_login3"
        android:textSize="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:text="@string/login_required"/>

    <Button
        android:id="@+id/btn_loginRequired"
        style="@style/style_btnlogin"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="@string/name_btnlogin"
        android:textSize="@dimen/_13sdp" />
</LinearLayout>