<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_above="@id/btn_addCart"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/back_productDetail"
            style="@style/style_imv_icon"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnLogin"
            android:fillViewport="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_prodetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imv_proDetail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:src="@drawable/panner1" />

                <TextView
                    android:id="@+id/name_proDetail"
                    style="@style/style_textview_login2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/tv_proDetail"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_textview_login2"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/tv_brand"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/brand"
                        style="@style/style_textview_login2"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/tv_brandname"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_180sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/minus"
                        style="@style/style_imv_icon3"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/ic_baseline_remove_24" />

                    <EditText
                        android:id="@+id/edt_number"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="@string/tv_num"
                        android:inputType="number"
                        android:background="@drawable/boder_rectangle2"/>

                    <ImageView
                        android:id="@+id/add"
                        style="@style/style_imv_icon3"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/ic_baseline_add_24" />

                    <TextView
                        android:id="@+id/tv_price"
                        style="@style/style_textview_login3"
                        android:layout_marginStart="@dimen/_80sdp"
                        android:gravity="center"
                        android:text="@string/price"
                        android:textStyle="bold"
                        android:textSize="@dimen/_17sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_textview_login2"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/tv_numPro"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/tv_number_pro"
                        style="@style/style_textview_login2"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/tv_num"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

                <TextView
                    style="@style/style_textview_login2"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/tv_describe"
                    android:textSize="@dimen/_17sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_body"
                    style="@style/style_textview_login2"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/tv_body"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    style="@style/style_textview_login2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/tv_review"
                    android:textSize="@dimen/_17sdp"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/btn_addCart"
        style="@style/style_btnlogin"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="@string/tv_addToCard"
        android:textSize="@dimen/_13sdp" />
</RelativeLayout>