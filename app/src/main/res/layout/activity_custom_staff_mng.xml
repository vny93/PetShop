<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:id="@+id/lnl_custom_staff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout style="@style/style_appBarLayout">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_ProductDetail"
                style="@style/style_toolbar"
                app:title="@string/tv_toolbar_updateStaff" />
        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:id="@+id/logo"
            style="@style/style_imvlogin"
            android:layout_marginTop="@dimen/_5sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_username"
                style="@style/style_textview_forgotpw"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_minus20sdp"
                android:text="@string/tv_username" />

            <androidx.cardview.widget.CardView
                style="@style/style_cardview_userlogin2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="@color/white">

                <EditText
                    android:id="@+id/edt_username_staff"
                    style="@style/style_edt_login2"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@color/white"
                    android:hint="@string/hint_edtusername" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titlePass"
                style="@style/style_textview_forgotpw"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_minus20sdp"
                android:text="@string/tv_password" />

            <androidx.cardview.widget.CardView
                style="@style/style_cardview_userlogin2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="@color/white">

                <com.google.android.material.textfield.TextInputLayout

                    android:id="@+id/hide_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_password_staff"
                        style="@style/style_edt_login2"
                        android:background="@color/white"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:hint="@string/hint_edtpassword"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/style_textview_forgotpw"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_minus20sdp"
                android:text="@string/tv_staffId" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_staffId"
                style="@style/style_cardview_userlogin2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <EditText
                    android:id="@+id/edt_staffId"
                    style="@style/style_edt_login2"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:enabled="false"
                    android:hint="@string/tv_staffId"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/style_textview_forgotpw"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_minus20sdp"
                android:text="@string/pf_name" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_name_staff"
                style="@style/style_cardview_userlogin2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <EditText
                    android:id="@+id/edt_name_staff"
                    style="@style/style_edt_login2"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:enabled="false"
                    android:hint="@string/pf_hintName" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/style_textview_forgotpw"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_minus20sdp"
                android:text="@string/pf_birth" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_birth_staff"
                style="@style/style_cardview_userlogin2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <EditText
                        android:id="@+id/edt_birth_staff"
                        style="@style/style_edt_login2"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:enabled="false"
                        android:hint="@string/pf_hintBirth" />

                    <ImageView
                        android:id="@+id/imv_calendar"
                        style="@style/style_imv_icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_minus30sdp"
                        android:background="@drawable/ic_baseline_calendar_month_24" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            style="@style/style_textview_forgotpw"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/pf_gender" />

        <RadioGroup
            android:id="@+id/radG_staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_male_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:enabled="false"
                android:text="@string/pf_male"
                android:textSize="@dimen/_13sdp" />

            <RadioButton
                android:id="@+id/radio_female_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:enabled="false"
                android:text="@string/pf_female"
                android:textSize="@dimen/_13sdp" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/style_textview_forgotpw"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_minus20sdp"
                android:text="@string/tv_brand_phone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_phone"
                style="@style/style_cardview_userlogin2"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <EditText
                    android:id="@+id/edt_phone_staff"
                    style="@style/style_edt_login2"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:enabled="false"
                    android:hint="@string/pf_hintPhone"
                    android:inputType="number"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/style_textview_forgotpw"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_minus20sdp"
                android:text="@string/hint_email" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_email_staff"
                style="@style/style_cardview_userlogin2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <EditText
                    android:id="@+id/edt_email_staff"
                    style="@style/style_edt_login2"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:enabled="false"
                    android:hint="@string/hint_email" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <TextView
            style="@style/style_textview_forgotpw"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_minus10sdp"
            android:text="@string/pf_address" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cart_address"
            style="@style/style_cardview_itemProductType"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_30sdp">

            <EditText
                android:id="@+id/edt_address_staff"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/boder_rectangle"
                android:enabled="false"
                android:gravity="top"
                android:hint="@string/pf_hintAddress"
                android:inputType="text|textMultiLine"
                android:maxLength="100"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/style_textview_forgotpw"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_minus15sdp"
            android:text="@string/tv_role_Staff" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cart_spinner_role"
            style="@style/style_cardview_userlogin2"
            android:layout_marginTop="@dimen/_15sdp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar.Bridge">

                <AutoCompleteTextView
                    android:id="@+id/spinner_role"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/boder_rectangle"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnSave"
            style="@style/style_btnlogin"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_100sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="@string/tv_save"
            android:textSize="@dimen/_13sdp" />


    </LinearLayout>

</ScrollView>